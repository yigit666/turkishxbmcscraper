<?xml version="1.0" encoding="utf-8"?><scraper framework="11" date="2010-10-17" name="New Scraper" content="movies" thumb="icon.png" language="tr">
	<CreateSearchUrl SearchStringEncoding="utf-8" dest="3">
		<!--http://www.beyazperde.com/arama.asp?kat=film&keyword=XXXXX&sira=yild-->
		<RegExp input="$$2" output="&lt;url&gt;http://www.beyazperde.com/arama.asp?kat=film&amp;keyword=\1&amp;sira=yild&lt;/url&gt;" dest="3">
			<RegExp input="$$1" output="\1" dest="2">
				<expression />
			</RegExp>
			<expression trim="1" noclean="1" />
		</RegExp>
	</CreateSearchUrl>
	<GetSearchResults dest="8">
		<RegExp input="$$5" output="&lt;?xml version=&quot;1.0&quot; encoding=&quot;iso-8859-1&quot; standalone=&quot;yes&quot;?&gt;&lt;results&gt;\1&lt;/results&gt;" dest="8">
			<RegExp input="$$1" output="&lt;entity&gt;&lt;title&gt;\3 / \5&lt;/title&gt;&lt;url&gt;http://www.beyazperde.com/film/\1/arama/\2&lt;/url&gt;&lt;id&gt;\5&lt;/id&gt;&lt;year&gt;\4&lt;/year&gt;&lt;/entity&gt; \n" dest="5">
				<expression repeat="yes" noclean="1">&lt;a href="http://www.beyazperde.com/film/([0-9]*)/film/(.[^\"]*)" class="turuncucizgisiz_11_px"&gt;&lt;b&gt;(.[^&lt;]*)&lt;/b&gt; \((.*?)\)&lt;br&gt;(.[^&lt;]*)</expression>
			</RegExp>
			<expression noclean="1" />
		</RegExp>
	</GetSearchResults>
	<GetDetails dest="3">
		<RegExp input="$$5" output="&lt;details&gt;\1&lt;/details&gt;" dest="3">
			<!--Title-->
			<RegExp input="$$1" output="&lt;title&gt;\1 - \3&lt;/title&gt;" dest="5">
				<expression trim="1" noclean="1">h1 class="baslik_filmadi31"&gt;(.[^&lt;]*)(.*?)\"&gt;(.[a-z]*)</expression>
			</RegExp>
			<!--Year Film-->
			<RegExp input="$$1" output="&lt;year&gt;\1&lt;/year&gt;" dest="5+">
				<expression>class=turunculine_11_px&gt;([0-9]*)&lt;/a&gt;, </expression>
			</RegExp>
			<!--rating-->
			<RegExp input="$$1" output="&lt;rating&gt;\1,\2&lt;/rating&gt;" dest="5+">
				<expression>SinePuan:&amp;nbsp;([0-9]*),([0-9]*)</expression>
			</RegExp>
			<!--Director-->
			<RegExp input="$$1" output="\1" dest="4">
				<expression noclean="1">YONETMEN --&gt;(.*?)&lt;/a&gt;</expression>
			</RegExp>
			<!--director sub-->
			<RegExp input="$$4" output="&lt;director&gt;\2&lt;/director&gt;" dest="5+">
				<expression>&lt;a href="/kisi/([0-9]*)" class=turunculine_11_px&gt;(.[^&lt;]*)</expression>
			</RegExp>
			<!--Runtime Film-->
			<RegExp input="$$1" output="&lt;runtime&gt;\1&lt;/runtime&gt;" dest="4">
				<expression clear="yes">&lt;\!\-\- SURESI \-\-&gt;(.*?)&lt;</expression>
			</RegExp>
			<!--runtime sub-->
			<RegExp input="$$4" output="&lt;runtime&gt;\2&lt;/runtime&gt;" dest="5+">
				<expression>,([0-9]*) (.[^&lt;]*)&lt;/runtime&gt;</expression>
			</RegExp>
			<!--Genre Film-->
			<RegExp input="$$1" output="&lt;genre&gt;\2&lt;/genre&gt;" dest="5+">
				<expression repeat="yes"> &lt;a href="\/arama.asp\?kat=tur&amp;keyword=([0-9]*)" class=turunculine_11_px&gt;(.[^&lt;]*)</expression>
			</RegExp>
			<!--Thumbnail   <img alt="John Rambo - Rambo 4: John Rambo" src="/images/film/3682-rambo-b.gif" width="150" height="200">-->
			<RegExp input="$$1" output="&lt;thumb&gt;http://www.beyazperde.com/images/film/\1&lt;/thumb&gt;" dest="5+">
				<expression noclean="1">src="\/images\/film\/(.[^&lt;]*)" width="150" height="200"&gt;</expression>
			</RegExp>
			<!--Actors    <a href="/kisi/3699" class=turunculine_11_px style="line-height:15px;">Sylvester&nbsp;Stallone</a>&nbsp;<font color="#DEE2E3">(Rocky&nbsp;Balboa)</font>-->
			<RegExp input="$$1" output="&lt;actor&gt;&lt;name&gt;\2 \4&lt;/name&gt;&lt;role&gt;\5 \6&lt;/role&gt;&lt;/actor&gt;" dest="5+">
				<expression repeat="yes" noclean="1" encode="1">&lt;a href="\/kisi/([0-9]*)" class=turunculine_11_px style="line-height:15px;"&gt;(.*?)&lt;(.[^(]*)\((.*?)\)</expression>
			</RegExp>
			<!--info-->
			<RegExp input="$$1" output="&lt;plot&gt;\1&lt;/plot&gt;" dest="5+">
				<expression trim="1">&lt;td width="450" class=metin align=left valign="middle"&gt;(.*?)&lt;/td&gt;</expression>
			</RegExp>
			<expression noclean="1" />
		</RegExp>
	</GetDetails>
</scraper>