<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="metadata.beyazperde.mynet.com"
       name="Beyazperde"
       version="1.0.2"
       provider-name="drascom">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
    <import addon="metadata.common.movieposterdb.com" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="tr"
             library="beyazperde.xml.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Beyazperde Movie Scraper</summary>
    <summary lang="hu">Beyazperde filmadat leolvasó</summary>
    <summary lang="pt">Scraper de filmes Beyazperde</summary>
    <description lang="en">Download Movie information from www.beyazperde.mynet.com</description>
    <description lang="hu">Film információk letöltése a www.beyazperde.mynet.com-ról</description>
    <description lang="pt">Descarregar informação de filmes de www.beyazperde.mynet.com</description>
    <platform>all</platform>
  </extension>
</addon>

