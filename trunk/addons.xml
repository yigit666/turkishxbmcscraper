<addons>
<addon id="drascom.repo"
		name="drascom depo"
		version="1.0"
		provider-name="drascom">
	<requires>
       <import addon="xbmc.python" version="1.0"/>
	</requires>
	<extension point="xbmc.addon.repository" name="drascom">
		<info compressed="true">https://turkishxbmcscraper.googlecode.com/svn/trunk/addons.xml</info>
		<checksum>https://turkishxbmcscraper.googlecode.com/svn/trunk/addons.xml.md5</checksum>
		<datadir zip="true">https://turkishxbmcscraper.googlecode.com/svn/trunk/data</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from xbmcTR Add-on Repository</summary>
		<description>Video plug-ins and Movie info scrapers for XBMC</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

