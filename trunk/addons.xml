<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.jetfilm"
       name="Jetfilm by drascom"
       version="0.0.1"
       provider-name="drascom">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
	  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Videos from jetfilm.com</summary>
    <description>Watch, Search Most recent tv series,Documentaries from jetfilm.com</description>
    <platform>all</platform>
  </extension>
</addon>

