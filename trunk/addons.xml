<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="metadata.turkcealtyazi.org"
       name="altturk"
       version="1.0.8"
       provider-name="drascom">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="tr"
             library="altturk.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Turkcealtyazi.org Movie Scraper</summary>
	<summary lang="tr">Turkcealtyazi.org Film Bilgisi</summary>
    <description lang="en">Download Movie information from www.Turkcealtyazi.org </description>
	<description lang="tr">Film bilgilerini (Poster, Oyuncular, Yıl, Tür vs..)
	www.Turkcealtyazi.org sitesinden alır. http://code.google.com/p/turkishxbmcscraper/ </description>
        <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.dizihd"
       name="DiziHD"
       version="0.0.3"
       provider-name="drascom">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
	  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Videos from diziHD.com</summary>
    <description>Watch, Search Most recent tv series,Documentaries from diziHD.com</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.diziport"
       name="Diziport"
       version="0.1.2"
       provider-name="drascom">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
	  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Videos from diziport.com</summary>
    <description>Search, download and watch Most recent tv series from diziport.com / Tüm güncel dizileri ister izleyin ister indirin</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.drascom.xbmc-plugins"
		name="drascom Add-on Repository"
		version="1.0.1"
		provider-name="drascom">
	<requires>
       <import addon="xbmc.python" version="1.0"/>
	</requires>
	<extension point="xbmc.addon.repository" name="drascom Add-on Repository">
		<info compressed="false">http://turkishxbmcscraper.googlecode.com/svn/trunk/addons.xml</info>
		<checksum>http://turkishxbmcscraper.googlecode.com/svn/trunk/addons.xml.md5</checksum>
		<datadir zip="false">http://turkishxbmcscraper.googlecode.com/svn/trunk/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from drascom Add-on Repository</summary>
		<description>Video plug-ins and Movie info scrapers for XBMC</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
